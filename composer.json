{
  "name": "jdevelop-io/symfony-ddd-clean-boilerplate",
  "description": "A boilerplate for Symfony projects that implements Domain-Driven Design (DDD), Hexagonal/Clean Architecture, and avoids traditional Symfony folder structures for maintainable, high-quality code.",
  "version": "0.1.0",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "JDevelop",
      "email": "developers@jdevelop.io"
    }
  ],
  "require": {
    "php": ">=8.3"
  },
  "autoload": {
    "psr-4": {
      "SymfonyCleanBoilerplate\\Contexts\\": "src/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.12",
    "phpmd/phpmd": "^2.15",
    "phpstan/phpstan": "^2.1",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan-strict-rules": "^2.0",
    "thecodingmachine/phpstan-safe-rule": "^1.4",
    "friendsofphp/php-cs-fixer": "^3.75"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
